<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/seeExamRollTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/table_cell_border"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/clo1TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/table_cell_border"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/clo2TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/table_cell_border"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/clo3TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/table_cell_border"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/clo4TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/table_cell_border"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/clo5TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/table_cell_border"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:background="@drawable/table_cell_border"
        android:textSize="16sp"
        android:gravity="center"/>
</LinearLayout>
