<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@drawable/table_cell_border"
                android:text="Exam Roll"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/table_cell_border"
                android:text="CLO1 (out of 12)"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/table_cell_border"
                android:text="CLO2 (out of 12)"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/table_cell_border"
                android:text="CLO3 (out of 12)"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/table_cell_border"
                android:text="CLO4 (out of 12)"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/table_cell_border"
                android:text="CLO5 (out of 12)"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1.5"
                android:background="@drawable/table_cell_border"
                android:text="Total (out of 60)"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />
        </TableRow>
    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seeMarksRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

</LinearLayout>
