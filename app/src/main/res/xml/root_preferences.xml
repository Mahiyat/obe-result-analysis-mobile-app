<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general_header">
        <SwitchPreferenceCompat
            app:key="dark_mode"
            app:title="@string/dark_mode_title"
            app:summaryOff="@string/dark_mode_off"
            app:summaryOn="@string/dark_mode_on" />

        <ListPreference
            app:key="language"
            app:title="@string/language_title"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:defaultValue="en"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/notifications_header">
        <SwitchPreferenceCompat
            app:key="notifications_enabled"
            app:title="@string/notifications_title"
            app:summaryOff="@string/notifications_off"
            app:summaryOn="@string/notifications_on" />

        <SwitchPreferenceCompat
            app:key="vibrate"
            app:title="@string/vibrate_title"
            app:dependency="notifications_enabled" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/account_header">
        <Preference
            app:key="change_password"
            app:title="@string/change_password_title"
            app:summary="@string/change_password_summary" />

        <Preference
            app:key="logout"
            app:title="@string/logout_title"
            app:summary="@string/logout_summary" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/about_header">
        <Preference
            app:key="app_version"
            app:title="@string/app_version_title"
            app:summary="@string/app_version_summary" />

        <Preference
            app:key="privacy_policy"
            app:title="@string/privacy_policy_title" />

        <Preference
            app:key="terms_of_service"
            app:title="@string/terms_of_service_title" />
    </PreferenceCategory>

</PreferenceScreen>